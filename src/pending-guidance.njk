---
layout: layout.njk
pagination:
  data: pendingGuidance
  size: 1
  alias: item
permalink: "/pending-guidance/{{ item.filename | replace('.md', '') }}/"
eleventyComputed:
  title: "{{ item.title or 'Pending Guidance' }}"
---

<div class="pending-guidance-page">
  <div class="guidance-header">
    <div class="status-display">Status: {{ (item.status or 'Pending') | replace('Guidance', '') | replace('guidance', '') | trim }}</div>
  </div>

  <div class="answer pending-guidance-content">
    {{ (item.answer or item.content) | markdown | safe }}

    {% if item.relatedFaqs and item.relatedFaqs.length > 0 %}
    <div class="related-faqs-inline">
      <ul>
        {% for faq in item.relatedFaqs %}
        <li><a href="/faq/{{ faq.category }}/{{ faq.filename | replace('.md', '') }}/">{{ faq.question | markdown | safe | striptags }}</a></li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
  </div>

  {% if item.data["Related issue"] %}
  <div class="related-issue">
    <strong>Related issue:</strong> <a href="{{ item.data["Related issue"] }}">{{ item.data["Related issue"] }}</a>
  </div>
  {% endif %}

  <div class="edit-on-github">
    <span class="edit-icon">✏️</span>
    <a href="https://github.com/orcwg/cra-hub/edit/main/faq/pending-guidance/{{ item.filename }}" target="_blank" rel="noopener">Edit this guidance request on GitHub</a>
  </div>
</div>

